
{
  "verbose": true,
  "stream": true,
  "input": {
    "puller":{
      "type": "mongodb",
      "uri": "mongodb://127.0.0.1",
      "db": "powerapi",
      "collection": "hwpcsensor"
    }
  },
  "output": {
    "pusher_power": {
      "type": "csv",
      "model": "PowerReport",
      "uri": "/tmp/sensor_output/"
    }
  },
  "cpu-frequency-base": 2000,
  "cpu-frequency-min": 1000,
  "cpu-frequency-max": 4000,
  "cpu-error-threshold": 2.0,
  "disable-dram-formula": true,
  "sensor-report-sampling-interval": 1000
}

